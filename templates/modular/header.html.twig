<header
	{% if page.header.featured|default(null) %}
		style="background-image: url('{{ page.media[page.header.featured].url }}');"
	{% endif %}
>
    <div class="container">
        <div class="intro-text">
            {{ content|raw }}
            {% for button in page.header.buttons %}
                <a class="page-scroll btn btn-xl" href="{{ button.url }}">{{ button.text }}</a>
            {% endfor %}
        </div>
    </div>
</header>
